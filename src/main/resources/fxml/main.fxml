<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gui.controller.MainController">
    <top>
        <Label BorderPane.alignment="CENTER">TicTacToe</Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="playerRed" promptText="Emir Red"/>
                <TextField fx:id="playerBlue" promptText="Emir Blue"/>
            </HBox>
            <Button onAction="#onStart" alignment="CENTER">Allah wills it!</Button>
        </VBox>
    </center>
    <bottom>
        <Label wrapText="true" BorderPane.alignment="CENTER">
            War scorches the sand dunes of Arabia. The land of the prophet is torn in a bloody
            struggle between rivaling tribes, to be the sole ruler of the peninsula. Who will be the
            new padisah?
        </Label>
    </bottom>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</BorderPane>
