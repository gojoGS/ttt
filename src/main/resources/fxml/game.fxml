<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Label BorderPane.alignment="CENTER" fx:id="playerName"/>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER" alignment="CENTER" gridLinesVisible="true"
                  fx:id="board">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
        </GridPane>
    </center>
    <right>
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="endTurn">End Turn</Button>
            <Button fx:id="yield">Yield</Button>
        </VBox>
    </right>
    <bottom>
        <Label BorderPane.alignment="CENTER" fx:id="messageBox" wrapText="true"/>
    </bottom>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</BorderPane>
