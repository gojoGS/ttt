<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="winnerName"/>
    <TableView fx:id="leaderBoard" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="redPlayerName" prefWidth="133.0" text="Emir Red"/>
            <TableColumn fx:id="bluePlayerName" minWidth="0.0" prefWidth="133.0" text="Emir Blue"/>
            <TableColumn fx:id="numberOfTurns" prefWidth="122.0" text="Number of turns"/>
            <TableColumn fx:id="colorOfWinner" minWidth="0.0" prefWidth="133.0" text="Winner"/>
        </columns>
        <VBox.margin>
            <Insets left="10.0" right="10.0"/>
        </VBox.margin>
    </TableView>
    <Button fx:id="back">
        Back to menu
    </Button>
</VBox>
